<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.footballscore.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dynamo_team"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="sans-serif-medium"
                android:text="Dynamo Kyiv"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/dynamo_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:text="0"
                android:textColor="#000"
                android:textSize="72sp" />

            <Button
                android:id="@+id/dynamo_gol_button"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:onClick="add1ToDynamo"
                android:text="gol"
                android:textColor="#FFFFFF" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/dynamo_shots_button"
                    android:layout_width="125dp"
                    android:layout_height="50dp"
                    android:onClick="addShotsToDynamo"
                    android:text="shots"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/dynamo_shots"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="0"
                    android:textSize="24sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/dynamo_penalty_button"
                    android:layout_width="125dp"
                    android:layout_height="50dp"
                    android:onClick="addPenaltyDynamo"
                    android:text="penalty"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/penalty_dynamo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="0"
                    android:textSize="24sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/dynamo_free_kick_button"
                    android:layout_width="125dp"
                    android:layout_height="50dp"
                    android:onClick="addFreeKickDynamo"
                    android:text="free kick"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/free_kick_dynamo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="0"
                    android:textSize="24sp" />
            </LinearLayout>


        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp"
            android:background="#E6E6E6" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/inter_team"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="sans-serif-medium"
                android:text="Inter Milan"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/inter_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:text="0"
                android:textColor="#000"
                android:textSize="72sp" />

            <Button
                android:id="@+id/inter_gol_button"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:onClick="add1ToInter"
                android:text="gol"
                android:textColor="#FFFFFF" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/inter_shots_button"
                    android:layout_width="125dp"
                    android:layout_height="50dp"
                    android:onClick="addShotsToInter"
                    android:text="shots"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/inter_shots"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="0"
                    android:textSize="24sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/inter_penalty_button"
                    android:layout_width="125dp"
                    android:layout_height="50dp"
                    android:onClick="addPenaltyInter"
                    android:text="penalty"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/penalty_inter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="0"
                    android:textSize="24sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/inter_free_kick_button"
                    android:layout_width="125dp"
                    android:layout_height="50dp"
                    android:onClick="addFreeKickInter"
                    android:text="free kick"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/free_kick_inter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="0"
                    android:textSize="24sp" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/reset"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:onClick="resetAll"
        android:text="reset"
        android:textColor="#FFFFFF" />

</RelativeLayout>
